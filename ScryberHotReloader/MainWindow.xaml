<Window x:Class="ScryberHotReloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="HTML to PDF Previewer" Height="700" Width="1200"
        KeyDown="Window_KeyDown"
        Background="#1e1e1e"
        Closing="Window_Closing"
        FontFamily="Segoe UI">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3" Margin="0,0,0,10" VerticalAlignment="Center">
            <Button Content="Open HTML" Click="OpenHtml_Click" Padding="14,6" Width="100"
            Background="#007ACC" Foreground="White" FontWeight="SemiBold"
            BorderThickness="0" Cursor="Hand" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003E6B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Save HTML" Click="SaveHtml_Click" Padding="14,6" Width="100"
            Background="#007ACC" Foreground="White" FontWeight="SemiBold"
            BorderThickness="0" Cursor="Hand" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003E6B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Save As..." Click="SaveAsHtml_Click" Padding="14,6" Width="100"
            Background="#007ACC" Foreground="White" FontWeight="SemiBold"
            BorderThickness="0" Cursor="Hand" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003E6B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Text="(Ctrl+S to save, Ctrl+O to open)" VerticalAlignment="Center" Foreground="#999"
               FontStyle="Italic" FontSize="13" Margin="10,0,0,0" />
        </StackPanel>


        <!-- HTML Editor -->
        <TabControl Grid.Row="1" Grid.Column="0"
            Background="#1e1e1e" BorderThickness="1" BorderBrush="#444">
            <TabItem Header="HTML">
                <avalonedit:TextEditor Name="HtmlEditor"
                               FontFamily="Consolas"
                               FontSize="14"
                               ShowLineNumbers="True"
                               SyntaxHighlighting="HTML"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               Background="#252526"
                               Foreground="#D4D4D4"
                               BorderThickness="0"
                               Padding="10"/>
            </TabItem>

            <TabItem Header="Model">
                <avalonedit:TextEditor Name="ModelEditor"
                           FontFamily="Consolas"
                           FontSize="14"
                           ShowLineNumbers="True"
                           SyntaxHighlighting="C#"
                           VerticalScrollBarVisibility="Auto"
                           HorizontalScrollBarVisibility="Auto"
                           Background="#252526"
                           Foreground="#D4D4D4"
                           BorderThickness="0"
                           Padding="10"/>
            </TabItem>
        </TabControl>


        <!-- Splitter -->
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="8" Background="#444"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      ShowsPreview="True"
                      Cursor="SizeWE" />

        <!-- PDF Viewer -->
        <Border Grid.Row="1" Grid.Column="2" Margin="5"
                BorderThickness="1" BorderBrush="#444" CornerRadius="4">
            <WebBrowser Name="PdfViewer" />
        </Border>

    </Grid>
</Window>
